{
  "name": "@mojaloop/security-bc-client-lib",
  "version": "0.1.26",
  "description": "mojaloop security authentication and authorization client library",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/security-bc/tree/main/packages/client-lib",
  "bugs": {
    "url": "https://github.com/mojaloop/security-bc/issues#readme"
  },
  "mojaloop": {
    "publish_to_npm": true
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepare": "echo \"PREPARE\"",
    "start": "echo 'nothing to run here'",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "npm run clean:npm; npm run clean:dist",
    "clean:dist": "rm -rf dist",
    "clean:npm": "rm -rf node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "@mojaloop/logging-bc-public-types-lib": "^0.1.16",
    "@mojaloop/security-bc-public-types-lib": "~0.1.18",
    "axios": "^1.3.4",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.1",
    "eslint": "^8.36.0",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^29.5.0",
    "nock": "^13.3.0",
    "npm-check-updates": "~16.7.12",
    "ts-jest": "^29.0.5",
    "typescript": "^4.6.4"
  }
}
