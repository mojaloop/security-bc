{
  "name": "@mojaloop/security-bc-authorization-svc",
  "version": "0.1.0",
  "description": "mojaloop security authorization service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/security-bc/tree/main/modules/authorization-svc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/security-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],

  "scripts": {
    "start": "tsc && npm run service",
    "service": "node dist/application/index.js",
    "build": "tsc",
    "watch": "tsc -w --pretty",
    "clean": "rm -Rf dist",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "docker:build": "npm run build && docker build . -t \"mojaloop/security-bc-authorization-svc\"",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "tslib": "^2.4.1",
    "@mojaloop/logging-bc-client-lib": "^0.1.17",
    "@mojaloop/security-bc-public-types-lib": "~0.1.2",
    "express": "^4.18.2",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/semver": "^7.3.13",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "npm-check-updates": "~16.6.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.4"
  }
}
