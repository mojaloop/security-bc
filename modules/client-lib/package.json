{
  "name": "@mojaloop/security-bc-client-lib",
  "version": "0.0.57",
  "description": "mojaloop security authentication and authorization client library",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/security-bc/tree/main/modules/client-lib",
  "bugs": {
    "url": "https://github.com/mojaloop/security-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepare": "echo \"PREPARE\"",
    "start": "echo 'nothing to run here'",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -Rf dist",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "npm exec ncu -- -e 2",
    "dep:update": "npm exec ncu -- -u",
    "pub": "npm run build && npm version patch && npm publish --tag=latest --access public"
  },
  "dependencies": {
    "@mojaloop/logging-bc-public-types-lib": "^0.0.3",
    "@mojaloop/security-bc-public-types-lib": "~0.0.5",
    "axios": "^0.25.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.1",
    "eslint": "^8.14.0",
    "jest": "^27.3.1",
    "nock": "^13.2.4",
    "npm-check-updates": "~16.3.3",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.4",
    "tslib": "^2.4.0"
  }
}
